<head>
    <title>Create Book Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        form {
            max-width: 600px;
            margin: auto;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        input,
        textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        button {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Create Book</h1>

    <form action="/create-book" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" required><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required></textarea><br>

        <label for="bookGenreId">Book Genre:</label>
        <select id="bookGenreId" name="bookGenreId" required>
            <option value="1">Science Fiction</option>
            <option value="2">Mystery</option>
            <option value="3">Romance</option>
        </select>

        <label for="isbn">ISBN:</label>
        <input type="number" id="isbn" name="isbn" required><br>

        <label for="imageUrl">Image URL:</label>
        <input type="text" id="imageUrl" name="imageUrl"><br>

        <button type="submit">Create Book</button>
    </form>
</body>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        $("#layoutId").attr("hidden", false);
    });
</script>
